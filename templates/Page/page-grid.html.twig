{% extends '@calista/Page/page.html.twig' %}

{% block item %}
  {{ node_view(item, constant('UDASHBOARD_VIEW_MODE_CONTENTADMIN')) }}
  {# We need an inner div because actions relies on relative/aboslute too #}
  <div class="actions">
    {{ calista_actions(item) }}
  </div>
{% endblock %}

{% block item_list %}
  <div class="row">
    {% for item in items %}
      <div class="calista-result col-lg-2 col-md-3" data-nid="{{ item.id }}">
        <div class="calista-result-inner">
          {{ block('item') }}
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}
